@model GreatSavings.Product
@using GreatSavings.Helper

<link href="~/Content/bootstrap-slider.css" type="text/css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-slider.js" type="text/javascript"></script>
<script src="~/Scripts/Directives/hidden-data-store.js" type="text/javascript"></script>
<script src="~/Scripts/prod-search.js" type="text/javascript"></script>

@using (Html.BeginForm("DisplayProducts", "Product", FormMethod.Post))
{
    <div class="widget-inner">
        <div class="widget-caption"><h4>Search</h4></div>
        <div class="widget-content">
            <div class="timeline">
                <p>Days Range: <span class="green">0</span> - <span class="green">60</span></p>
            </div>

            <div class="slider slider-horizontal">
                <input id='txtDaysRange' type='text' class='span2' value='' data-slider-min='0' data-slider-max='60'
                       data-slider-step='1' data-slider-value='[0,60]' />
            </div>

            <div class="dropdown dd-widget" hidden-data-store="category">
                @Html.CategoryDropDown(2)
            </div>
            <div class="dropdown dd-widget" hidden-data-store="location">
                @Html.LocationDropDown(2)
            </div>
            <div class="dropdown dd-widget" hidden-data-store="product-type">
                @Html.ProductDropDown(2)
            </div>
            <!--Hidden fields that keep the selection -->
            <input type="hidden" value="0" id="start_range" name="start_range">
            <input type="hidden" value="60" id="end_range" name="end_range">
            <input type="hidden" value="" id="category" name="category">
            <input type="hidden" value="" id="location" name="location">
            <input type="hidden" value="2" id="product-type" name="product-type">

            <button type="submit" class="btn btn-custom-green">Search Coupons</button>
        </div>
    </div>
}