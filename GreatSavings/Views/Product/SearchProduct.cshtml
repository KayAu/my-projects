@model GreatSavings.Product
@using GreatSavings.Helper

<link href="~/Content/bootstrap-slider.css" type="text/css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-slider.js" type="text/javascript"></script>
<script src="~/Scripts/test.js" type="text/javascript"></script>

<div class="widget-inner">
    <div class="widget-caption"><h4>Search Coupons</h4></div>
    <div class="widget-content">
        <div class="timeline">
            <p>Days Range: <span class="green">0</span> - <span class="green">70</span></p>
        </div>

        <div class="slider slider-horizontal">
            <input id='txtDaysRange' type='text' class='span2' value='' data-slider-min='0' data-slider-max='60'
                   data-slider-step='1' data-slider-value='[0,70]' />
        </div>

        <div class="dropdown dd-widget">
            @Html.CategoryDropDown(2)
        </div><div class="dropdown dd-widget">
            @Html.LocationDropDown(2)
        </div>


    </div>
</div>