<form name="loginForm"  ng-controller="accountController" ng-init="loadLoginModel()" novalidate valid-submission="login($event)">      

<div class="login-form-wrapper">
        <div class="header">
            <h1>Existing Customer</h1>
            <span>Please sign in if you already have an account.</span>
        </div>
        <div class="form-group">
            <label>Your email or username</label>
            <div class="col-md-10">
                <input type="text" ng-model="model.UserName" class="form-control" name="userName" required validation-style />
                <validation-error has-error="loginForm.$submitted && loginForm.userName.$error.required" show-icon="false"
                    error-message="The user name is required"></validation-error>
            </div>
        </div>
        <div class="form-group">
            <label>Your password</label>
            <div class="col-md-10">
         @*       @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "eg. xY12345!", id="password"  })
                @Html.ValidationMessageFor(model => model.Password)*@
                <input type="password" ng-model="model.Password" class="form-control" name="password" placeholder="eg. xY12345!" required validation-style />
                <validation-error has-error="loginForm.$submitted && loginForm.password.$error.required" show-icon="false"
                    error-message="The password is required"></validation-error>
                <label  ng-if="loginFailed" class="control-error-msg">Invalid username or password!</label>
            </div>
        </div>   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
            </div>
        </div>
    </div>
    <div class="footer">
        <input type="submit" class="btn btn-primary " value="Login" />
          
    </div>
</form>