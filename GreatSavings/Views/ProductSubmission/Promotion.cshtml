
<link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/Controllers/salesFreebiesController.js" type="text/javascript"></script>
<script src="~/Scripts/Directives/imageFileReader.js" type="text/javascript"></script>
<script src="~/Scripts/Directives/imagePicker.js" type="text/javascript"></script>
<script src="~/Scripts/Directives/validateSubmission.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $('#validFrom').datepicker();
        $('#validTo').datepicker();
    })
</script>
<div class="form-title">
    <h3>Create promotion</h3>
</div>
<form name="promotionForm" ng-controller="salesFreebiesController" ng-init="loadModel(6)" novalidate valid-submission="update($event)">
    <div class="form-horizontal">

        <div id="form-leftSection">

            <div class="form-group">
                <label class="control-label col-xs-2">Title</label>
                <div class="col-xs-10">
                    <input ng-model="model.Title" class="form-control" name="title" required validation-style />
                    <validation-error has-error="promotionForm.$submitted && promotionForm.title.$error.required" show-icon="true"
                                      error-message="The title is required"></validation-error>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Description</label>
                <div class="col-xs-10">

                   
                    <validation-error has-error="promotionForm.$submitted && promotionForm.description.$error.required" show-icon="true"
                                      error-message="The description is required"></validation-error>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Is Nation Wide</label>
                <div class="col-xs-10">
                    <input type="checkbox" ng-model="model.IsNationWide" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Valid from</label>
                <div class="col-xs-10">
                    <div class='input-group date' id='validFromDatePicker'>
                        <input id="validFrom" type='text' class="form-control" ng-model="model.ValidFrom" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Valid To</label>
                <div class="col-xs-10">
                    <div class='input-group date' id='validToDatePicker'>
                        <input id="validFrom" type='text' class="form-control" ng-model="model.ValidTo" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <input type="file" ng-model="model.uploadedImage" selected-image="model.ImgThumbnail" name="promotionImage" id="promotionImageUploader" class="hdn"
                       accept='image/*' image-file-reader required />
                <label class="control-label col-xs-2">promotion Picture</label>
                <div class="col-xs-10">
                    <label style="font-weight: normal;margin-top: 8px;">Max. file size: 8 MB. Allowed images: jpg, gif, png.</label><br />
                    <div image-picker file-uploader="promotionImageUploader" uploaded-image="model.uploadedImage"></div>
                    <validation-error has-error="promotionForm.$submitted && promotionForm.promotionImage.$error.required" show-icon="false"
                                      error-message="The picture is required"></validation-error>
                </div>
            </div>
        </div>
        @*     <div id="form-rightSection">
                    <div class="form-group">

                          <span>Max. file size: 8 MB. Allowed images: jpg, gif, png.</span><br />

                </div>
            </div> *@
    </div>
    <div class="form-update">

        <button id="btnpromotionUpdate" class="btn btn-large btn-primary btn-r-pos btn-subs action" type="submit">
            <i class="act-indicator i-M-loader"></i>
            <i class="act-indicator i-accept"></i>
            <i class="act-indicator i-ignore"></i>
            <span><b>Update</b></span>
        </button>
    </div>
</form>